@page "/counter"

@inject AppState appState;

<textarea @bind="json" style="width: 1200px; height: 1000px;"></textarea><br/>
<FluentButton IconStart="@(new Icons.Regular.Size28.ArrowDownload())" @onclick="Save"></FluentButton>
<FluentButton IconStart="@(new Icons.Regular.Size28.Open())" @onclick="Restore"></FluentButton>

@code {
    private string json = "";

    private void Save()
    {
        json = appState.Serialize();
    }

    private void Restore()
    {
        appState.Deserialize(json);
    }
}