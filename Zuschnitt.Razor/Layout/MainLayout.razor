@inherits LayoutComponentBase

@using Zuschnitt.Razor.Components

@inject AppState AppState

<FluentLayout>
    <FluentHeader Style="margin: 0px; padding: 0px">
        <ProjectActions/>
        <FluentTextField @bind-Value=AppState.Project.Name Style="width: 100%;"></FluentTextField>
    </FluentHeader>
    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <FluentBodyContent Class="content">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent Context="ex">
                    <div class="blazor-error-boundary">@ex.Message</div>
                </ErrorContent>
            </ErrorBoundary>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <FluentSpacer/>
        © 2024 Jurica Bacurin
    </FluentFooter>
</FluentLayout>
<FluentMenuProvider/>
<FluentDialogProvider/>