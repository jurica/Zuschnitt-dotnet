@inherits LayoutComponentBase

@using Zuschnitt.Razor.Components

@inject AppState AppState

<FluentLayout>
    <FluentHeader>
        <FluentIcon Value="@(new Icons.Filled.Size32.Table())" Color="@Color.Fill" /> 
        <FluentSpacer Width="10"/>
        Zuschnitt
    </FluentHeader>
    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <FluentBodyContent Class="content">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent Context="ex">
                    <div class="blazor-error-boundary">@ex.Message</div>
                </ErrorContent>
            </ErrorBoundary>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <FluentSpacer/>
        © 2024 Jurica Bacurin
    </FluentFooter>
</FluentLayout>
<FluentMenuProvider/>
<FluentDialogProvider/>